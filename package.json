{
    "name": "connect-deps",
    "version": "0.3.0",
    "description": "This is a CLI tool that intends to be a better yarn/npm link",
    "repository": "hugomrdias/connect-deps",
    "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
    "license": "MIT",
    "main": "index.js",
    "bin": "cli.js",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "test": "nyc ava",
        "lint": "eslint --cache *.js src/*.js",
        "validate": "run-p lint test",
        "precommit": "yarn validate",
        "version": "yarn changelog && git add changelog.md",
        "changelog": "conventional-changelog -p angular -i changelog.md -s -r 0",
        "cov": "yarn test && nyc report --reporter=html && hs coverage -s -o -c-1",
        "cov:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
    },
    "files": [
        "index.js",
        "cli.js"
    ],
    "keywords": [
        "cli",
        "link",
        "npm",
        "yarn",
        "dependencies",
        "connect"
    ],
    "dependencies": {
        "chokidar": "^3.3.1",
        "conf": "^6.2.4",
        "del": "^5.1.0",
        "execa": "^4.0.0",
        "has-yarn": "^2.1.0",
        "meow": "^7.0.1",
        "ora": "^4.0.4",
        "p-debounce": "^2.1.0",
        "p-queue": "^6.3.0",
        "read-pkg": "^5.2.0",
        "update-notifier": "^4.1.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^9.0.1",
        "ava": "^3.7.1",
        "codecov": "^3.6.5",
        "conventional-changelog-cli": "^2.0.31",
        "eslint": "^4.7.1",
        "eslint-config-halo": "^2.3.3",
        "http-serve": "^1.0.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.7",
        "np": "^6.2.2",
        "npm-run-all": "^4.1.1",
        "nyc": "^15.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS || (echo \"Your commit message is not lost! Try again with: git commit --edit --file=$(git rev-parse --show-toplevel)/.git/COMMIT_EDITMSG\" && exit 1)"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "eslintConfig": {
        "extends": "halo/plugins",
        "parserOptions": {
            "sourceType": "script"
        }
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        "dist",
        "storybook-static",
        "typings"
    ]
}
