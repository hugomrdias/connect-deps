{
    "name": "connect-deps",
    "version": "0.4.0",
    "description": "This is a CLI tool that intends to be a better yarn/npm link",
    "repository": "hugomrdias/connect-deps",
    "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
    "license": "MIT",
    "main": "index.js",
    "bin": "cli.js",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "test": "nyc ava",
        "lint": "eslint --cache *.js src/*.js"
    },
    "files": [
        "index.js",
        "cli.js"
    ],
    "keywords": [
        "cli",
        "link",
        "npm",
        "yarn",
        "dependencies",
        "connect"
    ],
    "dependencies": {
        "chokidar": "^3.3.1",
        "conf": "^7.1.2",
        "del": "^5.1.0",
        "execa": "^4.0.0",
        "has-yarn": "^2.1.0",
        "meow": "^10.0.1",
        "ora": "^5.0.0",
        "p-debounce": "^2.1.0",
        "p-queue": "^6.3.0",
        "read-pkg": "^5.2.0",
        "update-notifier": "^4.1.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.0.1",
        "@commitlint/config-conventional": "^9.0.1",
        "eslint": "^4.7.1",
        "eslint-config-halo": "^2.3.3",
        "http-serve": "^1.0.1",
        "husky": "^4.2.5",
        "lint-staged": "^10.1.7",
        "np": "^6.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS || (echo \"Your commit message is not lost! Try again with: git commit --edit --file=$(git rev-parse --show-toplevel)/.git/COMMIT_EDITMSG\" && exit 1)"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "eslintConfig": {
        "extends": "halo/plugins",
        "parserOptions": {
            "sourceType": "script"
        }
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        "dist",
        "storybook-static",
        "typings"
    ]
}
